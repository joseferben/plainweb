{
  "name": "web",
  "version": "1.0.10",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:app dev:tw",
    "test": "NODE_ENV=test vitest run",
    "test:dev": "NODE_ENV=test vitest watch",
    "db:push": "drizzle-kit push",
    "db:gen": "drizzle-kit generate ",
    "db:apply": "drizzle-kit migrate",
    "serve": "tsx app/cli/serve.ts",
    "dev:app": "tsx watch app/cli/serve.ts",
    "dev:tw": "tailwindcss -i ./app/styles.css -o ./public/output.css --watch",
    "routes": "tsx app/cli/routes.ts",
    "build": "tsc --noEmit && tailwindcss -i ./app/styles.css -o ./public/output.css --minify",
    "start": "pnpm db:apply && pnpm serve",
    "check": "biome check . && xss-scan",
    "fix": "biome check --fix .",
    "fly": "fly deploy .. --config web/fly.toml --dockerfile web/Dockerfile"
  },
  "dependencies": {
    "@kitajs/html": "4.1.0",
    "better-sqlite3": "^11.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.23.0",
    "drizzle-orm": "^0.32.0",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.3.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.0.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "plainweb": "workspace:*",
    "shiki": "^1.7.0",
    "slugify": "^1.6.6",
    "tsx": "^4.10.3",
    "ws": "^8.17.1",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@kitajs/ts-html-plugin": "^4.0.1",
    "@tailwindcss/typography": "^0.5.13",
    "@types/better-sqlite3": "^7.6.10",
    "@types/compression": "^1.7.5",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/markdown-it": "^14.1.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.15",
    "@types/ws": "^8.5.10",
    "daisyui": "^4.11.1",
    "node-mocks-http": "^1.14.1",
    "npm-run-all2": "^6.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "vitest": "^2.0.1"
  },
  "packageManager": "pnpm@9.5.0",
  "engineStrict": true,
  "engines": {
    "pnpm": ">=9.5.0",
    "node": ">=20.10.0"
  }
}
