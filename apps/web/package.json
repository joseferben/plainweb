{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"pnpm dev:app\" \"pnpm dev:tw\"",
    "dev:app": "tsx watch app/cli/start.ts",
    "dev:tw": "tailwindcss -i ./app/styles.css -o ./public/output.css --watch",
    "start": "tsx app/cli/start.ts",
    "check": "tsc --noEmit && eslint . --max-warnings 0 && xss-scan",
    "generate": "drizzle-kit generate",
    "migrate": "tsx app/cli/migrate.ts",
    "test": "node --test"
  },
  "dependencies": {
    "@kitajs/html": "^4.1.0",
    "better-sqlite3": "^10.0.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "express": "^4.19.2",
    "plainweb": "workspace:*",
    "shiki": "^1.5.2",
    "tsx": "^4.10.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@kitajs/ts-html-plugin": "^4.0.1",
    "@types/better-sqlite3": "^7.6.10",
    "@types/eslint": "^8.56.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "concurrently": "^8.2.2",
    "daisyui": "^4.11.1",
    "drizzle-kit": "^0.21.2",
    "eslint": "^8.57.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3"
  }
}
