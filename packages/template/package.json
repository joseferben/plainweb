{
  "name": "my-app",
  "version": "1.0.17",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:assets": "pnpm p assets --watch",
    "dev:serve": "pnpm p serve --watch",
    "dev:build": "tsc --noEmit --watch",
    "migrate": "pnpm p migrate",
    "migrations:make": "pnpm p migrations:make",
    "test": "vitest run",
    "build": "tsc --noEmit",
    "check": "biome check --fix . && xss-scan",
    "tables": "DATABASE_URL=db.sqlite3 kysely-codegen --dialect sqlite --out-file app/config/tables.ts",
    "p": "tsx bin.ts"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.1",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.5",
    "kysely": "^0.27.4",
    "plainstack": "workspace:*",
    "tsx": "^4.16.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@kitajs/ts-html-plugin": "^4.0.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/better-sqlite3": "^7.6.10",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "kysely-ctl": "^0.9.0",
    "npm-run-all2": "^6.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "vitest": "^2.0.1"
  },
  "packageManager": "pnpm@9.5.0",
  "engineStrict": true,
  "engines": {
    "pnpm": ">=9.5.0",
    "node": ">=20.10.0"
  }
}
