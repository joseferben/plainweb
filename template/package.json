{
  "name": "my-app",
  "version": "1.0.3",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"pnpm dev:app\" \"pnpm dev:tw\"",
    "dev:app": "tsx watch app/cli/start.ts",
    "dev:tw": "tailwindcss -i ./app/styles.css -o ./public/output.css --watch",
    "start": "tsx app/cli/migrate.ts && tsx app/cli/start.ts",
    "lint": "eslint . --max-warnings 0 && xss-scan",
    "fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build": "tsc --noEmit && tailwindcss -i ./app/styles.css -o ./public/output.css",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx app/cli/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "test": "NODE_ENV=test node --import tsx --test app/**/*.test.ts"
  },
  "dependencies": {
    "@kitajs/html": "^4.1.0",
    "better-sqlite3": "^10.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "plainweb": "workspace:*",
    "tsx": "^4.10.3",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.7",
    "@kitajs/ts-html-plugin": "^4.0.1",
    "@types/better-sqlite3": "^7.6.10",
    "@types/compression": "^1.7.5",
    "@types/errorhandler": "^1.5.3",
    "@types/eslint": "^8.56.5",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@typescript-eslint/parser": "^7.9.0",
    "concurrently": "^8.2.2",
    "daisyui": "^4.11.1",
    "drizzle-kit": "^0.21.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-turbo": "^1.13.3",
    "eslint-plugin-only-warn": "^1.1.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3"
  }
}
