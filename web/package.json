{
  "name": "web",
  "version": "1.0.13",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel serve:dev tw:dev",
    "test": "NODE_ENV=test vitest run",
    "test:dev": "NODE_ENV=test vitest watch",
    "db:gen": "drizzle-kit generate --dialect sqlite --schema app/schema.ts --out migrations",
    "db:apply": "tsx app/cli/migrate.ts",
    "routes": "tsx app/cli/routes.ts",
    "serve:dev": "tsx watch app/cli/serve.ts",
    "tw": "tailwindcss -i ./app/styles.css -o ./public/output.css --minify",
    "tw:dev": "tailwindcss -i ./app/styles.css -o ./public/output.css --watch",
    "build": "tsc --noEmit && pnpm tw",
    "serve": "pnpm db:apply && pnpm routes && tsx app/cli/serve.ts",
    "check": "biome check . && xss-scan",
    "fix": "biome check --fix .",
    "fly": "fly deploy .. --config web/fly.toml --dockerfile web/Dockerfile"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.1",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.23.0",
    "drizzle-orm": "^0.32.0",
    "express": "^4.19.2",
    "express-basic-auth": "^1.2.1",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.0.1",
    "plainweb": "workspace:*",
    "shiki": "^1.7.0",
    "slugify": "^1.6.6",
    "tsx": "^4.16.2",
    "ws": "^8.17.1",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@kitajs/ts-html-plugin": "^4.0.1",
    "@tailwindcss/typography": "^0.5.13",
    "@tsconfig/node20": "^20.1.4",
    "@types/better-sqlite3": "^7.6.10",
    "@types/express": "^4.17.21",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.11.24",
    "@types/ws": "^8.5.10",
    "daisyui": "^4.11.1",
    "node-mocks-http": "^1.14.1",
    "npm-run-all2": "^6.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "vitest": "^2.0.1"
  },
  "packageManager": "pnpm@9.5.0",
  "engineStrict": true,
  "engines": {
    "pnpm": ">=9.5.0",
    "node": ">=20.10.0"
  }
}
