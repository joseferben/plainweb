{
  "extends": "@repo/typescript-config/base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@kitajs/html",
    "plugins": [{ "name": "@kitajs/ts-html-plugin" }],
    "types": ["@kitajs/html/htmx.d.ts", "@kitajs/html/alpine.d.ts"],
    "paths": {
      "~/*": ["./*"]
    }
  }
}
