{
  "name": "web",
  "version": "1.0.7",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"pnpm dev:app\" \"pnpm dev:tw\" \"pnpm db:studio\"",
    "test": "NODE_ENV=test node --import tsx --test \"app/**/*.test.ts\"",
    "db:push": "drizzle-kit push",
    "db:gen": "drizzle-kit generate ",
    "db:apply": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "serve": "tsx app/cli/serve.ts",
    "dev:app": "tsx watch app/cli/serve.ts",
    "dev:tw": "tailwindcss -i ./app/styles.css -o ./public/output.css --watch",
    "routes": "tsx app/cli/routes.ts",
    "build": "tsc --noEmit && tailwindcss -i ./app/styles.css -o ./public/output.css --minify",
    "start": "pnpm db:apply && pnpm serve",
    "check": "biome check . && xss-scan",
    "fix": "biome check --fix .",
    "fly": "fly deploy .. --config web/fly.toml --dockerfile web/Dockerfile"
  },
  "dependencies": {
    "@kitajs/html": "4.1.0",
    "better-sqlite3": "^10.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.21.2",
    "drizzle-orm": "^0.30.10",
    "errorhandler": "^1.5.1",
    "express": "^4.19.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.3.1",
    "http-proxy-middleware": "^3.0.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.0.1",
    "marked": "^13.0.0",
    "marked-gfm-heading-id": "3.2.0",
    "marked-shiki": "^1.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.13",
    "plainweb": "workspace:*",
    "shiki": "^1.7.0",
    "tsx": "^4.10.3",
    "ws": "^8.17.1",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2",
    "express-list-endpoints": "^7.1.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.7",
    "@kitajs/ts-html-plugin": "^4.0.1",
    "@tailwindcss/typography": "^0.5.13",
    "@types/better-sqlite3": "^7.6.10",
    "@types/compression": "^1.7.5",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^4.17.21",
    "@types/markdown-it": "^14.1.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "daisyui": "^4.11.1",
    "node-mocks-http": "^1.14.1",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3",
    "@biomejs/biome": "^1.8.3"
  },
  "packageManager": "pnpm@9.5.0",
  "engineStrict": true,
  "engines": {
    "node": ">=20.10.0"
  }
}
