{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.test"],
  "globalEnv": [
    "SMTP_HOST",
    "SMTP_USER",
    "SMTP_PASS",
    "CF_TURNSTILE_SECRET",
    "CF_TURNSTILE_SITEKEY",
    "ADMIN_PASSWORD",
    "DB_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "public/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
